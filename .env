# PDF
PDF_PATH=./MLN.pdf

# Retrieval
USE_LOCAL_EMBEDDING=true
LOCAL_EMBED_MODEL=sentence-transformers/all-MiniLM-L6-v2
LOCAL_EMBED_BATCH=64
TOP_K=5
CHUNK_SIZE=1200
CHUNK_OVERLAP=150

# === Local LLM (generation) ===
USE_LOCAL_LLM=true
LOCAL_LLM_MODEL=Qwen/Qwen2.5-1.5B-Instruct     # gợi ý khác: Qwen/Qwen2.5-0.5B-Instruct (rất nhẹ), microsoft/Phi-3.5-mini-instruct
LOCAL_LLM_MAX_NEW_TOKENS=512
LOCAL_LLM_TEMPERATURE=0.2
